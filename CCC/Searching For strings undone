#include <bits/stdc++.h>
using namespace std;
#define ll long long

const ll X = 13, MOD = 100000000000000000;
unordered_set <ll> ans;
string s, t;
int cnt[26], cur[26];
unsigned ll hsh = 0;

bool check(){
    for (int i = 0; i < 25; ++i){
        if (cnt[i] != cur[i]){
            return 0;
        }
    }
    return 1;
}
int main(){
    ios::sync_with_stdio(0);
    cin.tie(0);


    cin >> t >> s;
    if (t.size() > s.size()){
        cout << 0 << '\n';
        return 0;
    }


    for (int i = 0; i<t.size(); ++i){
        ++cnt[t[i] - 'a'];
    }

    for (int i = 0; i<t.size(); ++i){
        ++cur[s[i]- 'a'];
        hsh *= X;
        hsh += (s[i] - 'Z');
    }

    if (check()){
        ans.insert(hsh);
    }
    for (int i = t.size(); i < s.size(); ++i){
        ++cur[s[i] - 'a'];
        --cur[s[i - t.size()] - 'a'];

        hsh -= pow(X, t.size() - 1) * s[i - t.size() - 1];
        
        hsh *= X;
        hsh += (s[i] - 'Z');


        if (check()){
            //cout << hsh << '\n';
            ans.insert(hsh);
        }
        cout << "HERE: " << hsh << ' ' << X << ' '  << t.size() - 1 << ' ' << pow(X, t.size() - 1) << ' ' << s[i - t.size()] << '\n';
    }
    cout << '\n';
    cout << ans.size() << '\n';
}
